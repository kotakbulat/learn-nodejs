<%- include('partials/header', { pageTitle: 'Projects', siteName: portfolio.name }) %>

<h2>My Projects</h2>

<% portfolio.projects.forEach(project => { %>
    <div class="project">
        <h3><%= project.title %></h3>
        <p><%= project.description %></p>
        <% if (project.url && project.url !== '#') { %>
            <a href="<%= project.url %>" target="_blank">View Project</a>
        <% } else { %>
            <p><em>(Link not available)</em></p>
        <% } %>
    </div>
<% }) %>

<%- include('partials/footer', { siteAuthor: portfolio.name }) %>